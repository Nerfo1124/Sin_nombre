<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.PerfilUsuario">

    <ScrollView
        android:id="@+id/svPerfilUsuario"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTituloPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Informacion de Perfil"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2c56c5"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/llViewNombreU"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTituloApp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/IS_ET_nameuser"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTituloApp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtFechaNacimiento"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:hint="Fecha de Nacimiento"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTituloApp"
                android:layout_marginTop="150dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtSexoUsuario"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:hint="Sexo"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTituloApp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/txtIdSesion"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:hint="Id de Sesion"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="180dp" />

</RelativeLayout>