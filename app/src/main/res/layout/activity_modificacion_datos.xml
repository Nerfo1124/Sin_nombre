<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.ModificacionDatos">

    <ScrollView
        android:id="@+id/scrollModificacion"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false">

    </ScrollView>

    <TextView
        android:id="@+id/lblModificarDatos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Modificacion de Datos"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2c56c5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lblDatosPersonales"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lblModificarDatos"
        android:layout_marginTop="10sp"
        android:gravity="left"
        android:linksClickable="true"
        android:text="Datos Personales"
        android:textColor="#2c56c5"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtIdUsuarioM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblDatosPersonales"
        android:hint="Id de Usuario" />

    <EditText
        android:id="@+id/txtNombreCompleto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtIdUsuarioM"
        android:hint="Nombre completo" />

    <EditText
        android:id="@+id/txtFechaNacimientoM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:hint="Fecha de Nacimiento" />

    <EditText
        android:id="@+id/txtSexoM"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtFechaNacimientoM"
        android:hint="Sexo de usuario" />

    <EditText
        android:id="@+id/txtApellidoCompleto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtNombreCompleto"
        android:hint="Apellido Completo" />

    <Button
        android:id="@+id/btnModificarPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSexoM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:onClick="modificarDatos"
        android:text="Actualizar Datos"
        android:textSize="20sp" />

</RelativeLayout>
