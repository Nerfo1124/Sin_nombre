<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.PerfilUsuario"
    android:gravity="center">

    <ScrollView
        android:id="@+id/svPerfilUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTituloPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Informacion de Perfil"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2c56c5"
                android:textSize="30dp" />

            <LinearLayout
                android:id="@+id/llViewNombreU"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:id="@+id/lblNombre"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/IS_ET_nameuser"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewFecha"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="110sp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Nac:"
                    android:id="@+id/lblNacimiento"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtFechaNacimiento"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewSexo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160sp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexo:"
                    android:id="@+id/lblSexo"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtSexoUsuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sexo"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llViewSesion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="210sp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codigo Sesion: "
                    android:id="@+id/lblSesion"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtIdSesion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Id de Sesion"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50px"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llViewSesion">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informacion de Tamaño  Fuente"
                    android:id="@+id/textView"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="#2c56c5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="350sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamaño:"
                    android:id="@+id/lblTamanio"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtFuentePerfil"
                    android:hint="Tamaño fuente" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>